<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_project_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_margin="12dp"/>

        <TextView
            android:layout_alignTop="@id/image_view_project_icon"
            android:id="@+id/text_view_title_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_view_project_icon"
            android:text="The App Title" />

        <TextView
            android:id="@+id/text_view_desc_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_title_app"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/image_view_project_icon"
            android:text="Description of the App" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>