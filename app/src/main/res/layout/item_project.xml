<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_project_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="1dp">

            <ImageView
                android:id="@+id/image_view_project_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_view_title_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/card_view_project_icon_container"
            android:layout_toRightOf="@id/card_view_project_icon_container"
            android:fontFamily="sans-serif-medium"
            android:text="The App Title"
            android:textColor="#222222"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_view_desc_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_title_app"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/card_view_project_icon_container"
            android:fontFamily="sans-serif-light"
            android:text="Description of the App"
            android:textColor="#888888"
            android:textSize="14sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>